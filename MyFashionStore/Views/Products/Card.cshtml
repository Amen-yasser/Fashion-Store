@model List<Order>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddToCard</title>
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/fontawesome/font-awesome.min.css" rel="stylesheet" />
    <link href="/Content/ADdToCart.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1 class="text-center">YOUR ORDER</h1>

        <div class="cart">
            @foreach (var i in Model)
            {
                <div class="cartItem row">
                    <div class="col-md-3">
                        <img src="/imageForShow/@i.Product.product_photo" />
                    </div>

                    <div class="col-md-3">
                        <h3>@i.Product.product_name</h3>
                    </div>

                    <div class="col-md-3 quantity_option">
                        <span id="minous" data-q="minous">-</span>
                        <span id="quantity">1</span>
                        <span id="plus" data-q="plus">+</span>
                    </div>

                    <div class="col-md-2">
                        <span>Price For One Piece</span>
                        <span class="d-none price_hidden">@i.total_price</span>
                        <h4 id="price">@i.total_price </h4>
                        <span>$</span>
                    </div>

                    <div class="col-md-1">
                        <a href="/Products/deleteItemCard/@i.id_product">
                            <i class="fa fa-trash-o text-danger"></i>
                        </a>
                    </div>

                </div>
                <hr />
            }
        </div>



        <div class="row" style="width:80%;margin:auto;align-items:center">
            <div class="col-md-4 text-left">
                <button class="btn btn-primary" id="checkOut"> checkOut </button>
            </div>
            <div class="col-md-4">
                <a href="/Products/product" class="btn btn-primary"> Continue shopping </a>
            </div>
            <div class=" col-md-4 text-right Total_price">
                <span>Total Price : </span>
                <span></span>
                <span>$</span>
            </div>
        </div>

    </div>







    <script src="/Scripts/jquery-3.0.0.min.js"></script>
    <script src="/Scripts/umd/popper.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/Scripts/card.js"></script>
</body>
</html>
